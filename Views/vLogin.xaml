<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jdelgadoExamen.Views.vLogin"
             Title="vLogin">
    
    <VerticalStackLayout Padding="25" Spacing="20">
        <Label 
            Text="TIENDA UPS"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            FontSize="20"
            TextColor="Red"/>
        <Image
            Source="uisrael.jpg"
            HorizontalOptions="Center"
            WidthRequest="200" />

        <Grid>
            <!--Filas-->
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <!--Columnas-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label
        
        Text="Usuario"
        FontSize="18"
        HorizontalTextAlignment="Center"
        Grid.Row="0"
        Grid.Column="0"/>

            <Entry
        x:Name="txtUsuario"
        Placeholder="Ingrese el Usuario"
        Grid.Row="0"
        Grid.Column="1"/>

            <Label
       
        Text="Contraseña"
        FontSize="18"
        HorizontalTextAlignment="Center"
        Grid.Row="1"
        Grid.Column="0"/>

            <Entry
        x:Name="txtContrasena"
        Placeholder="Ingrese el contraseña"
        IsPassword="True"
        Grid.Row="1"
        Grid.Column="1"/>
          
            
            <Button x:Name="btnIniciarSesion"
             Text="Ingresar Sesión"
            Clicked="btnIniciarSesion_Clicked"
            Grid.Row="2"
            Grid.Column="0"/>
            <Button x:Name="btnAcercade"
  Text="Acerca de"
  Clicked="btnAcercade_Clicked"
  Grid.Row="2"
  Grid.Column="1"/>



        </Grid>
    </VerticalStackLayout>
</ContentPage>